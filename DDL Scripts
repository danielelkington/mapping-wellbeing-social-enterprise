--DROP TABLE Participant;
--DROP TABLE Place;
--DROP TABLE MediaItem;
--DROP TABLE MediaItemType;

CREATE TABLE Enterprise (
	EnterpriseId nvarchar(50),
	EnterpriseName nvarchar(50), 
	EnterprisePassword nvarchar(50), 
	EnterpriseCoverImage image, 
	EnterpriseCoverCoordinate float, 
	EnterpriseModifiedUTC nvarchar(50),
	PRIMARY KEY (EnterpriseId) 
);

CREATE TABLE Participant (
	ParticipantId nvarchar(50),
	EnterpriseId nvarchar(50),
	ParticipantName nvarchar (50),
	ParticipantBio nvarchar(50),
	ParticipantImage image,
	PRIMARY KEY (ParticipantId), 
	FOREIGN KEY (EnterpriseId) REFERENCES Enterprise(EnterpriseId)
);

CREATE TABLE Place (
	PlaceId nvarchar(50), 
	ParticipantId nvarchar(50), 
	PlaceSquenceNumber nvarchar(50),
	PlaceName nvarchar(50),
	PlaceCoordinate float,
	PlaceDescription nvarchar(50), 
	PRIMARY KEY (PlaceId),
	FOREIGN KEY (ParticipantId) REFERENCES Participant(ParticipantId)
);

CREATE TABLE MediaItem (
	MediaItemId nvarchar(50),
	PlaceId nvarchar(50),
	MediaItemTypeId nvarchar(50),
	MediaItemName nvarchar(50),
	MediaItemURL nvarchar(50),
	PRIMARY KEY (MediaItemId),
	FOREIGN KEY (PlaceId) REFERENCES Place(PlaceId),
	FOREIGN KEY (MediaItemTypeId) REFERENCES MediaItemType(MediaItemTypeId)
); 

CREATE TABLE MediaItemType (
	MediaItemTypeId nvarchar(50),
	MediaItemTypeName nvarchar(50),
	Primary Key (MediaItemTypeId)
); 
